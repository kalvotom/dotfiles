!-----------------------------------------------------------------------------
! Xcursor --------------------------------------------------------------------

Xcursor.theme: Vanilla-DMZ-AA
Xcursor.size:  24

!-----------------------------------------------------------------------------
! Xft settings ---------------------------------------------------------------

Xft.dpi:        168
Xft.antialias:  1
Xft.autohint:   0
Xft.rgba:       rgb
Xft.hinting:    1
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault

!-----------------------------------------------------------------------------
! xterm ----------------------------------------------------------------------

xterm*VT100.geometry:     80x25
xterm*faceName:           Monospace:style=Regular:size=12
xterm*dynamicColors:      true
xterm*utf8:               2
xterm*eightBitInput:      true
xterm*saveLines:          512
xterm*scrollKey:          true
xterm*scrollTtyOutput:    false
xterm*scrollBar:          false
xterm*rightScrollBar:     false
xterm*jumpScroll:         true
xterm*multiScroll:        true
xterm*toolBar:            false


!------------------------------------------------------------------------------
! URXVT - Settings

URxvt.depth: 32
URxvt.saveLines: 12000

URxvt*geometry:                                 80x25
URxvt*borderLess:                               false
URxvt*scrollBar:                                false
URxvt*cursorBlink:                              true
URxvt*cursorUnderline:                          true
URxvt*font:                                     xft:dejavusansmono:hinting=true:pixelsize=24:antialias=true
!URxvt*boldFont:                                 xft:terminusmodx:style=bold:hinting=true:pixelsize=7:antialias=false
!URxvt*italicFont:                               xft:terminusmodx:style=italic:hinting=true:pixelsize=7:antialias=false
!URxvt*boldItalicFont:                           xft:terminusmodx:style=bolditalic:hinting=true:pixelsize=7:antialias=false
URxvt.underlineURLs:                            true
!URxvt.url-select.launcher:                      /usr/bin/luakit
!URxvt.url-select.underline:                     true

